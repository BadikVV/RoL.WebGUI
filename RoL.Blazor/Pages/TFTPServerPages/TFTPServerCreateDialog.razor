@page "/TftpServerCreateDialog"
@using RoL.Dtos.TFTPDtos
@using System.Text.Json
@using RoL.Dtos
@inject HttpClient Http

<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer xs="12" Class="mx-auto px-4 justify-center my-4 mud-text-align-center" Style="max-height: 700px; width: 600px; overflow-y: scroll">
            <b>Address</b>
            <MudItem xs="12">
                <MudTextField Class="my-2" @bind-Value="@_newTftp.Address" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
            <MudDivider Class="mt-2 mb-1"></MudDivider>
            <b>Enabled</b>
            <MudCheckBox @bind-Checked="@_newTftp.Enabled" Size="Size.Large" Color="@Color.Primary">
                Enabled: @_newTftp.Enabled.ToString()
            </MudCheckBox>
            <MudDivider Class="mt-2 mb-1"></MudDivider>
            <b>Port</b>
            <MudItem xs="12">
                <MudTextField Class="my-2" @bind-Value="@_newTftp.Port" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
            </MudItem>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Create">Ok</MudButton>
    </DialogActions>
</MudDialog>
<SnackBars @ref="_snackBars"></SnackBars>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    
    private SnackBars? _snackBars;
    private TftpServerCreateDto _newTftp = new();
    private List<TftpPathCreateDto> _newPaths = new();

    void Cancel() => MudDialog.Cancel();

    private async void Create()
    {
        var responseTftp = await Http.PostAsJsonAsync("tftp/", _newTftp);
        var dto = await responseTftp.Content.ReadFromJsonAsync<TftpServerDto>();
        foreach (var newPath in _newPaths)
        {
            var responsePath = await Http.PostAsJsonAsync($"tftp/{dto.Id}/path/", newPath);
        }
        if (responseTftp.IsSuccessStatusCode)
        {
            if (_snackBars != null) await _snackBars.ShowSuccess();
            await Task.Run(() => MudDialog.Close(DialogResult.Ok(true)));
        }
        else
        {
            var errorContent = await responseTftp.Content.ReadAsStringAsync();
            var validationErrors = JsonSerializer.Deserialize<ValidationErrorDto>(errorContent)!;

            foreach (var error in validationErrors.Errors)
            {
                if (_snackBars != null) await _snackBars.ShowError($"{error.Field + ": " + error.Error}");
            }
        }
    }
    private void AddPath()
    {
        _newPaths.Add(new TftpPathCreateDto());
    }
    private void DeletePath(TftpPathCreateDto path)
    {
        _newPaths.Remove(path);
    }
}